{
  "version": "0.2.0",
  "configurations": [
    {
      "command": "./node_modules/.bin/astro dev",
      "name": "Development server",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "name": "Fastapi",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--reload-dir=app"],
      "console": "integratedTerminal"
      //   "internalConsoleOptions": "openOnSessionStart",
    },
    {
      "name": "Celery",
      "type": "python",
      "request": "launch",
      "module": "celery",
      "args": [
        "--app=app.core.celery_app",
        "worker",
        "--loglevel=info",
        "--concurrency=1",
        "-P=solo"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Flower",
      "type": "python",
      "request": "launch",
      "module": "python",
      "args": [
        "-m=flower",
        "--app=app.core.celery_app",
        "flower",
        "--port=5555"
      ],
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Run backend",
      "configurations": ["Fastapi", "Celery", "Flower"]
    }
  ]
}
