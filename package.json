{
  "name": "website",
  "private": true,
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "lint": "TIMING=1 eslint \"**/*.{ts,tsx}\"",
    "lint:ci": "pnpm run lint",
    "build": "turbo run build",
    "build:ci": "turbo run build:ci",
    "test": "turbo run test --concurrecy=1",
    "ci": "pnpm lint:ci && pnpm build:ci && pnpm test:ci",
    "format": "prettier --write \"**/*.{astro,js,jsx,ts,tsx,css,scss,md,mdx,yml,yaml,xml,toml,json}\"",
    "custom:dnm": "find . -type d -name node_modules -prune -exec rm -rf {} \\;",
    "custom:upd": "pnpm --recursive update"
  },
  "devDependencies": {
    "@packages/preset-commitlint": "workspace:^",
    "@packages/preset-eslint": "workspace:^",
    "@packages/preset-prettier": "workspace:^",
    "@packages/preset-ts": "workspace:^",
    "@turbo/gen": "^1.10.12",
    "husky": "^8.0.3",
    "lint-staged": "^13.3.0",
    "turbo": "latest",
    "vercel": "^29.4.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.6.10",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react"
      ]
    },
    "requiredScripts": [
      "build"
    ],
    "allowedDeprecatedVersions": {
      "@npmcli/move-file": "1.1.2",
      "rollup-plugin-inject": "3.0.2",
      "sourcemap-codec": "1.4.8",
      "stable": "0.1.8",
      "vm2": "3.9.19"
    }
  },
  "commitlint": {
    "extends": "@packages/preset-commitlint/index.commitlint.js"
  },
  "eslintConfig": {
    "extends": "@packages/preset-eslint/index.eslintrc.js"
  },
  "prettier": "@packages/preset-prettier/index.prettierrc.js",
  "lint-staged": {
    "{packages,tools}/**/*.{js,json,css,scss,md,ts,html,graphql}": [
      "nx affected --target lint --uncommitted --fix true",
      "nx affected --target lint --uncommitted",
      "nx format:write --uncommited"
    ]
  }
}
