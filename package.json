{
  "name": "website",
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "dev": "pnpm astro dev --host",
    "dnm": "find . -type d -name node_modules -prune -exec rm -rf {} \\;",
    "upd": "pnpm --recursive update",
    "py-rqs": "poetry export --without-hashes --format=requirements.txt > requirements.txt"
  },
  "private": true,
  "dependencies": {
    "@astrojs/solid-js": "^2.1.0",
    "@astrojs/vercel": "^3.2.5",
    "@nanostores/solid": "^0.3.2",
    "@project/streamer": "workspace:^",
    "@project/instagram": "workspace:^",
    "@website/server": "workspace:^",
    "@unocss/astro": "^0.50.8",
    "@unocss/preset-wind": "^0.50.8",
    "@unocss/reset": "^0.50.8",
    "astro": "^2.3.2",
    "nanostores": "^0.8.1",
    "solid-js": "^1.7.3",
    "zod": "^3.21.4",
    "@supabase/supabase-js": "^2.21.0"
  },
  "devDependencies": {
    "@astrojs/mdx": "^0.19.0",
    "@astrojs/partytown": "^1.2.0",
    "@astrojs/ts-plugin": "^0.4.5",
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@commitlint/config-nx-scopes": "^17.6.4",
    "@commitlint/cz-commitlint": "^17.6.7",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "astro-icon": "^0.8.0",
    "astro-purgecss": "^2.0.1",
    "commitizen": "^4.3.0",
    "eslint": "^8.39.0",
    "eslint-plugin-astro": "^0.26.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.3",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "^0.8.0",
    "prettier-plugin-tailwindcss": "^0.2.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "vercel": "^29.0.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "vite",
        "react"
      ]
    },
    "requiredScripts": [
      "build"
    ],
    "allowedDeprecatedVersions": {
      "@npmcli/move-file": "1.1.2",
      "rollup-plugin-inject": "3.0.2",
      "sourcemap-codec": "1.4.8"
    }
  },
  "lint-staged": {
    "{packages,tools}/**/*.{js,json,css,scss,md,ts,html,graphql}": [
      "nx affected --target lint --uncommitted --fix true",
      "nx affected --target lint --uncommitted",
      "nx format:write --uncommited"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-nx-scopes"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": true,
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "arrowParens": "always"
  }
}
