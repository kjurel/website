---
import { Generate, Scanner } from "../components/qrcode";
---

<button
  class="btn btn-info"
  data-bs-toggle="modal"
  data-bs-target="#qrcodeModal">Use QR</button
>

<div class="modal modal-lg fade" id="qrcodeModal">
  <div class="modal-dialog modal-dialog-scrollable modal-fullscreen-md-down">
    <div class="modal-content">
      <h2 class="modal-header">
        Stream Connector<button
          class="btn-close"
          data-bs-dismiss="modal"
          data-bs-target="qrcodeModal"></button>
      </h2>
      <div class="modal-body">
        <ul class="nav nav-pills nav-fill mb-3" id="pills-tab" role="tablist">
          <li class="nav-item" role="presentation">
            <button
              class="nav-link active"
              id="pills-generate-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-generate"
              type="button"
              role="tab"
              aria-controls="pills-generate"
              aria-selected="true">Generate</button
            >
          </li>
          <li class="nav-item" role="presentation">
            <button
              class="nav-link"
              id="pills-scanner-tab"
              data-bs-toggle="pill"
              data-bs-target="#pills-scanner"
              type="button"
              role="tab"
              aria-controls="pills-scanner"
              aria-selected="false">Scaner</button
            >
          </li>
        </ul>
        <div class="tab-content" id="pills-tabContent">
          <div
            class="tab-pane fade show active"
            id="pills-generate"
            role="tabpanel"
            aria-labelledby="pills-generate-tab"
            tabindex="0"
          >
            <div class="p-3">
              <Generate client:visible />
            </div>
          </div>
          <div
            class="tab-pane fade"
            id="pills-scanner"
            role="tabpanel"
            aria-labelledby="pills-scanner-tab"
            tabindex="0"
          >
            <div class="p-3">
              <Scanner client:visible />
            </div>
          </div>
        </div>
        <div class="modal-footer">
          Use the Generate tab for streaming to a device, and the Scanner tab to
          stream from a device
        </div>
      </div>
    </div>
  </div>
</div>
